<Page x:Class="RegionalLibrary.Pages.MainFramePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RegionalLibrary.Pages"
      mc:Ignorable="d"
      Title="Главная"
      Height="455" Width="600">
    <Grid>
        
        <Grid.RowDefinitions>
               <RowDefinition Height="50"/>
               <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
           <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal"
                                    Margin="5, 5, 0, 5"
                                    HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Top">
                                <StackPanel Orientation="Vertical"
                                            Margin="0, 1, 0, 0">
                                    
                                        <StackPanel Orientation="Horizontal">
                                            
                                            <Label Content="Название"
                                                   Foreground="DarkGray"
                                                   HorizontalContentAlignment="Center"
                                                   Margin="0, 0, 0, 0"
                                                   FontWeight="Light"
                                                   Width="128"
                                                   FontSize="18"/>
                                            
                                            <Label Content="Автор"
                                                   Foreground="DarkGray"
                                                   Margin="25, 0, 0, 0"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Light"
                                                   FontSize="18"/>
                                            
                                            <Label Content="Жанры"
                                                   Foreground="DarkGray"
                                                   Width="90"
                                                   Margin="45, 0, 0, 0"
                                                   HorizontalAlignment="Center"
                                                   HorizontalContentAlignment="Center"
                                                   FontWeight="Light"
                                                   FontSize="18"/>
                                            
                                            <Label Content="Год создания"
                                                   Margin="-0, 0, 10, 0"
                                                   Width="120"
                                                   Foreground="DarkGray"
                                                   HorizontalAlignment="Center"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   FontWeight="Light"
                                                   FontSize="14"/>
                                            
                                            <Label Content="Номер стеллажа"
                                                   Margin="-17, 0, 0, 0"
                                                   Foreground="DarkGray"
                                                   VerticalAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   FontWeight="Light"
                                                   FontSize="14"/>
                                        </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
        </Grid>
        
           <ListView Grid.Row="1"
                     Background="#272537"
                  
                     ItemsSource="{Binding}"
                     ItemContainerStyle="{StaticResource BookListViewItem}"
                     BorderThickness="0"
                     Name="BooksList">
           </ListView>
           
        <Grid Grid.Row="2">
            <Button Width="580"
                    Height="35"
                    VerticalAlignment="Center"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    VerticalContentAlignment="Center"
                    Content="УДАЛИТЬ"
                    FontWeight="Black"
                    FontSize="22"
                    BorderThickness="0"
                    Foreground="White"
                    Background="#BE2538"
                    Click="RemoveBook"/>
        </Grid>
    </Grid>
</Page>
